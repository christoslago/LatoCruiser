@model LatoCruiser.Models.BookingRequest
@using Syncfusion.EJ2


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BookingRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookerName" class="control-label"></label>
                <input asp-for="BookerName" class="form-control" />
                <span asp-validation-for="BookerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookerEmail" class="control-label"></label>
                <input asp-for="BookerEmail" class="form-control" />
                <span asp-validation-for="BookerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookerPhone" class="control-label"></label>
                <input asp-for="BookerPhone" class="form-control" />
                <span asp-validation-for="BookerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookStart" class="control-label"></label>
                <ejs-datepicker id="datepicker" ejs-for="BookStart" format="dd-MM-yyyy" placeholder="Choose a Date"></ejs-datepicker>
                <span asp-validation-for="BookStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookEnd" class="control-label"></label>
                <ejs-datepicker id="datepicker2" ejs-for="BookEnd" format="dd-MM-yyyy" placeholder="Choose a Date"></ejs-datepicker>
                <span asp-validation-for="BookEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookDescription" class="control-label"></label>
                <input asp-for="BookDescription" class="form-control" />
                <span asp-validation-for="BookDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
